# üåç CITYPULSE ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your actual values

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/citypulse?retryWrites=true&w=majority"
DATABASE_NAME="citypulse"

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-token-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Password hashing
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# üöÄ SERVER CONFIGURATION
# =============================================================================

# API Service
API_PORT=3000
API_HOST="localhost"
API_BASE_URL="http://localhost:3000"

# Worker Service  
WORKER_PORT=3001
WORKER_HOST="localhost"

# Auth Service
AUTH_PORT=3002
AUTH_HOST="localhost"
AUTH_BASE_URL="http://localhost:3002"

# =============================================================================
# üìß EMAIL SERVICE CONFIGURATION
# =============================================================================
EMAIL_SERVICE="gmail"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="CityPulse <noreply@citypulse.com>"

# =============================================================================
# üì± SMS/TWILIO CONFIGURATION
# =============================================================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# =============================================================================
# üîÑ REDIS CONFIGURATION (for job queues and caching)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# =============================================================================
# üåç EXTERNAL SERVICES
# =============================================================================

# Google Maps API (for geocoding and location services)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Weather API (for incident context)
WEATHER_API_KEY="your-weather-api-key"

# =============================================================================
# üîç OAUTH CONFIGURATION
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# =============================================================================
# üìä MONITORING & LOGGING
# =============================================================================

# Application Environment
NODE_ENV="development"
LOG_LEVEL="debug"

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# üéØ FEATURE FLAGS
# =============================================================================
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_INCIDENT_AUTO_CLASSIFICATION=true
ENABLE_RESOURCE_AUTO_MATCHING=true
ENABLE_INCIDENT_DEDUPLICATION=true

# =============================================================================
# üîí SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://citypulse.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_INCIDENT=5

# =============================================================================
# üß™ TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/citypulse-test?retryWrites=true&w=majority"
TEST_JWT_SECRET="test-jwt-secret"
